{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "removeComments": true,
    "outDir": "./dist/",
    "allowJs": true,
    "noEmit": true,
    // "noEmit": false, // for webpack compile
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react"
  },
  "compilerOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "./node_modules"
  ]
}